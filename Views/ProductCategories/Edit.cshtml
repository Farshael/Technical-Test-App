@model TechnicalTest.Models.ProductCategory

@{
    ViewData["Title"] = "Edit Product Category";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header text-dark">
            <h5 class="mb-0">Edit Product Category</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Back to List</a>
                    <button type="submit" class="btn btn-outline-success btn-sm">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
